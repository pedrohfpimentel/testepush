{% extends "admin/layout.twig" %}
{% block html_title %}Categorias de Produtos - {{ parent() }}{% endblock %}
{% set nav_active = 'role' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Categorias de Produtos</li>
</ol>
{% endblock %}
{% block content %}

<div class="main">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <a class="btn btn-success" href="{{ base_url() }}/admin/products_type/add">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nova Categoria
      </a>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" style="">
      <div class="row">
        <div class="col-sm-8">
          <p class="panel-title">Categorias de Produtos</p>
        </div>
        
      </div>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12">
          {% if products_type %}
            <table class="table table-striped data-table">
            <thead>
              <tr>
                <th style="width: 45%">Nome</th>
                <th style="width: 45%">Descrição</th>
              
                <th class="th-button" style="width: 10%"></th>
              </tr>
            </thead>
            <tbody>
              {% for products_type in products_type %}
              <tr>
                <td>{{ products_type.name }}</td>
                <td>{{ products_type.description }}</td>
              
                <td style="width:100px;"><a class="btn btn-default btn-sm pull-right" style="margin:0px" href="{{ base_url() }}/admin/products_type/edit/{{ products_type.id }}">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a></td>
                {#<td style="width:100px;"><a class="btn btn-danger" href="{{ base_url() }}/admin/products_type/remove/{{ products_type.id }}">
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
                </a></td>#}
              </tr>
              {% endfor %}
            </tbody>
            </table>
          {% else %}
            <div class="alert alert-danger" role="alert">Não existem categorias cadastrados</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>



{% endblock %}
