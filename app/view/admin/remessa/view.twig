{% extends "admin/layout.twig" %}
{% block html_title %} - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'remessa' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/remessa">Remessa</a></li>
  <li class="active">{{ remessa.id }}</li>
</ol>
{% endblock %}
{% block content %}



<div class="row">
  <div class="col-md-12">
    <form role="form" data-toggle="validator" action="{{ base_url() }}/admin/remessa/update" method="POST">
    <ul class="list-group">
      <li class="list-group-item">Tipo de Entrada: <strong>
       <select id="selectRemessaType" name="id_remessa_type">
         {% for remessa_types in remessa_type %}
          {% if remessa.remessa_type == remessa_types.id %}
            <option value="{{ remessa.remessa_type }}" selected>{{ remessa_types.name }}
            </option>
          {% else %}
            <option value="{{ remessa.remessa_type }}">{{ remessa_types.name }}
            </option>
          {% endif %}
         {% endfor %}
       </select>
                {#{{ remessa.remessa_type_name }}</strong>#}</li>
      <li class="list-group-item">Fornecedor/ Paciente: <strong>
        <select id="selectPatientSupplier" name="selectPatientSupplier">
          {% for remessa_types in remessa_type %}
            {% if remessa.remessa_type == 6 %}
              {% for patient in patients %}
                {% if patient.id == remessa.patient_id %}
                  <option value="{{ patient.id }}" selected>{{ patient.user_name }}
                  </option>
                {% else %}
                  <option value="{{ patient.id }}">{{ patient.user_name }}
                  </option>
                {% endif %}
              {% endfor %}
            {% else %}
              {% for supplier in suppliers %}
                {% if remessa.suppliers == supplier.id %}
                  <option value="{{ supplier.id }}" selected>{{ supplier.name }}
                  </option>
                {% else %}
                  <option value="{{ supplier.id }}">{{ supplier.name }}
                  </option>
                {% endif %}
              {% endfor %}
            {% endif %}
         {% endfor %}

        </select>
          
        </strong></li>
      <li class="list-group-item">Data de Entrada: <strong>
        {{ remessa.date|date('d/m/Y') }}</strong></li>
    </ul>
    <div class="main">

  <div class="card">
    <div class="card-content">
      <div class="row">
        <div class="col-xs-12">
          <h4>Lista de Produtos</h4>

          {% if remessa.remessa_type == 2 %}
          <table class="table table-striped data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Quantidade</th>
                <th>Custo Unitário</th>
                <th>Custo Total</th>
                <th>Código Patrimonial</th>                
              </tr>
            </thead>
            <tbody>
              {% for product_remessa in products_remessa %}
                <tr>
                  <td>{{ product_remessa.name_product }}</td>
                  <td>{{ product_remessa.quantity }}</td>
                  <td>{{ product_remessa.cost }} </td>
                  <td>{{ custo_total }} </td>
                  <td>{{ product_remessa.patrimony_code}} </td>
              {% endfor %}
            </tbody>
          </table>
          {% else %}


          <table class="table table-striped data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Quantidade</th>               
                <th>Código Patrimonial</th>                
              </tr>
            </thead>
            <tbody>
              {% for product_remessa in products_remessa %}
                <tr>
                  <td>{{ product_remessa.name_product }}</td>
                  <td>{{ product_remessa.quantity }}</td>
                 
                  <td>{{ product_remessa.patrimony_code}} </td>
              
              {% endfor %}
            </tbody>
          </table>
          {% endif %}
        </div>
      </div>
    </div>
    </ul>
  </div>


<button type="submit" class="btn btn-primary">Atualizar</button>
      </form>

    
</div>


 
</div>

{% endblock %}
