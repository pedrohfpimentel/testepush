{% extends "admin/layout.twig" %}
{% block html_title %}Atendimentos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'attendances' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
{% endblock %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/attendances">Atendimentos</a></li>
  <li class="active">{{ attendance.id }}</li>
</ol>
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-sm-10">
    <div class="card">
  <div class="card-header" data-background-color="blue">
    <div class="row">
      <div class="col-xs-12 ">
        <h3>Atendimento</h3>
      </div>
    </div>
  </div>
  <div class="card-content">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <form role="form" data-toggle="validator" action="{{ base_url() }}/admin/attendances/update" method="POST">
        <input type="hidden" name="id" value="{{ attendance.id }}">
       
           <div class="row">
                 <div class="col-sm-12">
                   <div class="form-group">
                     <label for="name">Paciente:</label>
                     <div class="ui-widget">
                       <input id="name_patient" class="form-control" type="text" name="name_patient" placeholder="Descrição" required value="{{ attendance.name_patient }}">
                     </div>
                   </div>
                 </div>
               </div>

          <div class="form-group">
            <label for="name_professional">Profissional:</label>
            <div class="ui-widget">
                       <input id="name_professional" class="form-control" type="text" name="name_professional" placeholder="Descrição" required value="{{ attendance.name_professional }}">
                     </div>
          </div>


          <div class="form-group">
            <label for="description">Observações:</label>
            <input id="description" class="form-control" type="text" name="description" placeholder="Descrição" required value="{{ attendance.description }}">
          </div>


          
           <div class="col-sm-6">
              <div class="form-group">
                <label for="selectStatus">Situação</label>
                 <select class="form-control" id="selectStatus" name="status">
                  {% for status in attendance_status %}
                    {% if status.id == attendance.status %}
                      <option value="{{ status.id }}" selected>{{ status.name }}
                      </option>
                    {% else %}
                      <option value="{{ status.id }}">{{ status.name }}
                      </option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>

                <div class="form-group">
              <label>Data e Hora:</label>
              <input id="attendance_day" class="form-control" type="text" name="attendance_day" placeholder="Descrição" required value="{{ attendance.attendance_day }}">
                     </div>
      
       
          
          {# <div class=" col-sm-2 form-group">
              <label for="quantity">Quantidade</label>
              <input type="number" class="form-control" id="inputQuantity" name="quantity" placeholder="">
            </div>
          </div> #}

        <button type="submit" class="btn btn-primary">Atualizar</button>
      </form>
      </div>
    </div>
  </div>
</div>




{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}
