{% extends "admin/layout.twig" %}
{% block html_title %}Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'professionals' %}

{% block breadcrumbs %}
<ol class="breadcrumb">
  <li class="active">Início</li>
</ol>
{% endblock %}

{% block content %}

<div class="main">
  <div class="card">
    <div class="card-header" data-background-color="blue">
      <div class="row">
        <div class="col-sm-4">
          <h4>Profissionais</h4>
        </div>
        <div class="col-sm-8">
          <p class="pull-right">

            <div class="container col-sm-4" style="margin-right:55px; padding:10px; border-radius: 5px; border-color: white;border-style: solid;">
               <label for="professionals_start" style="color: white; padding-botton:0;">Data Inicial:</label>
               <input id="professionals_start" class="form-control" type="date" name="professionals_start" style="color: white;" required>
             </div>

              <div class="container col-sm-4" style="margin-right:55px; padding:10px; border-radius: 5px; border-color: white;border-style: solid;">
               <label for="professionals_finish" style="color: white; padding-botton:0;">Data Final:</label>
               <input id="professionals_finish" class="form-control" type="date" name="professionals_finish" style="color: white;" required>
             </div>
            
       
            <a class="btn btn-default" id="professionals_download" name="professionals_download"  href="{{ base_url() }}/admin/professionals/export">
              <input type="hidden" name="" value="{{ base_url() }}" id="base_url_hidden">
              <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
            </a>

            <a class="btn btn-success" href="{{ base_url() }}/admin/professionals/add">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
         
          </p>
        </div>
      </div>

    </div>
    <div class="card-content">
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-striped data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Cargo</th>
                <th class="th-button"></th>
                <th class="th-button"></th>
              </tr>
            </thead>

            <tbody>
              {% for professional in professionals %}
                <tr>
                  <td>{{ professional.user_name }}</td>
                  <td>{{ professional.user_email }}</td>
                  <td>{{ professional.professional_type_name }}</td>
                  <td style="width:80px"><a class="btn btn-info" href="{{ base_url() }}/admin/professionals/history/{{ professional.id }}">
                    Histórico
                  </a></td>
                  <td style="width:80px"><a class="btn btn-default" href="{{ base_url() }}/admin/professionals/edit/{{ professional.id }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </a></td>
                  <td style="width:80px"><a class="btn btn-danger" href="{{ base_url() }}/admin/professionals/remove/{{ professional.id }}">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </a></td>
                </tr>
              {% else %}
                <div class="alert alert-danger" role="alert">Não existem profissionais cadastrados</div>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <ul class="pager">
            <li{% if page == 1 %} class="disabled"{% endif %}>
              <a{% if page > 1 %} href="{{ base_url() }}/admin/professionals?page={{ page - 1 }}"{% endif %}>Anterior</a>
            </li>
            <li{% if page >= amountPages %} class="disabled"{% endif %}>
              <a{% if page < amountPages %} href="{{ base_url() }}/admin/professionals?page={{ page + 1 }}"{% endif %}>Próximo</a>
            </li>
          </ul>
        </div>
      </div>
      
    </div>
  </div>
</div>

{% endblock %}

{% block javascripts %}


  <script type="text/javascript">
      $("#professionals_download").click(function(){
       // console.log('teste');
      var professionals_start = $('#professionals_start').val()
       var professionals_finish =$('#professionals_finish').val()
       var base_url_hidden =$('#base_url_hidden').val()

          console.log($('#professionals_download').attr('href'));
          $("#professionals_download").attr('href',   base_url_hidden +'/admin/professionals/export?professionals_start=' + professionals_start + '&professionals_finish=' + professionals_finish);
});
        </script>
{% endblock %}
