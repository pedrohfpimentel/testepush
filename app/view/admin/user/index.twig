{% extends "admin/layout.twig" %}
{% block html_title %}Usuários - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'user' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Usuários</li>
</ol>
{% endblock %}
{% block content %}

<div class="panel panel-default">
  <div class="panel-heading" style="">
    <div class="row">
      <div class="col-sm-8">
        <p  class="panel-title">{{ page_title }}</p>
      </div>
      <div class="col-sm-4">
        <p class="pull-right">
          {% if users -%}
            <a class="btn btn-default btn-sm" style="margin:0px" href="{{ base_url() }}/admin/user/export">
              <span class="glyphicon glyphicon-export"  aria-hidden="true"></span>
            </a>
          {%- endif %}
          <a class="btn btn-success btn-sm" style="margin:0px" href="{{ base_url() }}/admin/user/add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </a>
        </p>
      </div>

    </div>

  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        {% if users %}
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 30%">Email</th>
                  <th style="width: 40%">Nome</th>
                  <th style="width: 10%">Criado em</th>
                  <th style="width: 10%">Cargo</th>
                  <th class="th-button" style="width: 10%"></th>
                </tr>
              </thead>
              <tbody>
                {% for user in users %}
                <tr>
                  <td>
                    <a href="{{ base_url() }}/admin/user/{{ user.id }}">
                      {{ user.email }}
                    </a>
                  </td>
                  <td>{{ user.name }}</td>
                  <td>{{ user.created_at }}</td>
                  <td>{{ user.role }}</td>
                  <td>
                    <a class="btn btn-xs btn-default pull-right" style="margin:0px" href="{{ base_url() }}/admin/user/edit/{{ user.id }}">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                    </a>
                  </td>
                  {#<td>
                    <a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/user/delete/{{ user.id }}">
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
                    </a>
                  </td>#}
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem usuários cadastrados</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>



{% endblock %}
