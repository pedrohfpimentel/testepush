{% extends "admin/layout.twig" %}
{% block html_title %}Fornecedores - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'suppliers' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/suppliers">Fornecedores</a></li>
  <li class="active">Adicionar</li>
</ol>
{% endblock %}
{% block content %}
<div class="card">
  <div class="card-header" data-background-color="blue">
    <div class="row">
      <div class="col-xs-12">
        <h3>Adicionar Fornecedor</h3>
      </div>
    </div>
  </div>
  <div class="card-content">
    <div class="row">
      <div class="col-md-6">
        <form role="form" data-toggle="validator" action="{{ base_url() }}/admin/suppliers/add" method="POST">

          <div class="form-group">
            <label for="name">Nome:</label>
            <input class="form-control" id="name" type="text" name="name" placeholder="Nome" autofocus required>

          </div>
          <div class="form-group">
            <label for="description">Descrição:</label>
            <input id="description" class="form-control" type="text" name="description" placeholder="Nome" required>
          </div>

          <div class="row">

           
             <div class="col-sm-6 form-group">
              <label for="inputObservacoes">Email</label>
              <input type="text" class="form-control" id="inputObservacoes" name="email" placeholder="">
            </div>

            <div class="col-sm-2 ">
              <div class="form-group">
                <label for="inputDDD">DDD</label>
                <input type="number" class="form-control" id="inputDDD" name="ddd" placeholder="">
              </div>
            </div>
            <div class=" col-sm-4 form-group">
              <label for="inputTelefone">Telefone</label>
              <input type="number" class="form-control" id="inputTelefone" name="telefone" placeholder="">
            </div>

          </div>

          <button type="submit" class="btn btn-success">Adicionar</button>
        </form>
      </div>
    </div>
  </div>
</div>


{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>

{% endblock %}
