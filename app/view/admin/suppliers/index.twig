{% extends "admin/layout.twig" %}
{% block html_title %}Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'suppliers' %}

{% block breadcrumbs %}
<ol class="breadcrumb">
  <li class="active">Início</li>
</ol>
{% endblock %}

{% block content %}

  {#padrao#}
<div class="main">
  <div class="row">
      <div class="col-xs-12 col-sm-3">
        <a class="btn btn-success" href="{{ base_url() }}/admin/suppliers/add">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo Fornecedor
        </a>
      </div>
      <div class="col-sm-9">
        <div class="card">
          <div class="card-header" data-background-color="purple">
            Relatório
          </div>
          <div class="card-content" style="padding-top:5px;">
            <div class="col-sm-10">
              <div class="form-group">              
              </div>
            </div>           
          
            <div class="col-sm-2">
              <div class="form-group">
                <a class="btn btn-default" id="suppliers_download" name="suppliers_download"  href="{{ base_url() }}/admin/suppliers/export" target="_blank">
                  <input type="hidden" name="" value="{{ base_url() }}" id="base_url_hidden">
                  Relatório
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

<div class="main">
  <div class="card">
    <div class="card-header" data-background-color="blue">
      <div class="row">
        <div class="col-sm-8">
          <h3>Fornecedores</h3>
        </div>
       {# <div class="col-sm-4">
          <p class="pull-right">
            <a class="btn btn-success" href="{{ base_url() }}/admin/suppliers/add">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
          </p>
        </div>#}
      </div>

    </div>
    <div class="card-content">
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-striped data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Email</th>
                <th>DDD</th>
                <th>Telefone</th>
                <th class="th-button"></th>
                <th class="th-button"></th>
              </tr>
            </thead>

            <tbody>
              {% for supplier in suppliers %}
                <tr>
                  <td>{{ supplier.name }}</td>
                  <td>{{ supplier.description }}</td>
                  <td>{{ supplier.email }}</td>
                  <td>{{ supplier.ddd }}</td>
                  <td>{{ supplier.telefone }}</td>
                  <td style="width:100px"><a class="btn btn-default" href="{{ base_url() }}/admin/suppliers/edit/{{ supplier.id }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                  </a></td>
                  {#<td style="width:100px"><a class="btn btn-danger" href="{{ base_url() }}/admin/suppliers/remove/{{ supplier.id }}">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
                  </a></td>#}
                </tr>
              {% else %}
                <div class="alert alert-danger" role="alert">Não existem fornecedores cadastrados</div>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>



       <div class="row">
        <div class="col-xs-12">
          <ul class="pager">
            <li{% if page == 1 %} class="disabled"{% endif %}>
              <a{% if page > 1 %} href="{{ base_url() }}/admin/suppliers?page={{ page - 1 }}"{% endif %}>Anterior</a>
            </li>
            <li{% if page >= amountPages %} class="disabled"{% endif %}>
              <a{% if page < amountPages %} href="{{ base_url() }}/admin/suppliers?page={{ page + 1 }}"{% endif %}>Próximo</a>
            </li>
          </ul>
        </div>
      </div>



    </div>
  </div>
</div>

{% endblock %}
