{% extends "admin/layout.twig" %}
{% block html_title %}Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'products' %}

{% block breadcrumbs %}
<ol class="breadcrumb">
  <li class="active">Início</li>
</ol>
{% endblock %}

{% block content %}



{#padrao#}
<div class="main">
  <div class="row">
      <div class="col-xs-12 col-sm-3">
        <a class="btn btn-success" href="{{ base_url() }}/admin/products/add">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Novo Produto
        </a>
      </div>
      <div class="col-sm-9">
        <div class="card">
          <div class="card-header" data-background-color="purple">
            Relatório
          </div>
          <div class="card-content" style="padding-top:5px;">
            <div class="col-sm-10">
              <div class="form-group">              
              </div>
            </div>           
          
            <div class="col-sm-2">
              <div class="form-group">
                <a class="btn btn-default" id="products_download" name="products_download"  href="{{ base_url() }}/admin/products/export" target="_blank">
                  <input type="hidden" name="" value="{{ base_url() }}" id="base_url_hidden">
                  Relatório
                </a>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  




<div class="main">
  <div class="card">
    <div class="card-header" data-background-color="blue">
      <div class="row">
        <div class="col-sm-8">
          <h3>Produtos</h3>
        </div>
        {#<div class="col-sm-4">
          <p class="pull-right">
            <a class="btn btn-success" href="{{ base_url() }}/admin/products/add">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
          </p>
        </div>#}
      </div>

    </div>
    <div class="card-content">
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-striped data-table">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Custo</th>
                <th class="th-button"></th>
                <th class="th-button"></th>
              </tr>
            </thead>


             {# <script>
               // function soma()
               // {
              //    products.quantity.value = (form.quantity2.value*1) + (form.quantity.value*1)
               // }
            //  </script> #}


            <tbody>
              {% for products in products %}

                <tr>
                  <td>{{ products.name }}</td>
                  <td>{{ products.description }}</td>
                  <td>{{ products.products_type_name }}</td>
                  <td>{{ products.quantity }}</td>
                  <td>{{ products.media }}</td>

                  <td style="width:100px"><a class="btn btn-info" href="{{ base_url() }}/admin/products/history/{{ products.id }}">
                    Histórico
                  </a></td>
                  <td style="width:100px"><a class="btn btn-default" href="{{ base_url() }}/admin/products/edit/{{ products.id }}">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </a></td>
                  <td style="width:100px"><a class="btn btn-danger" href="{{ base_url() }}/admin/products/remove/{{ products.id }}">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </a></td>
                </tr>
              {% else %}
                <div class="alert alert-danger" role="alert">Não existem Produtos cadastrados</div>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>


      <div class="row">
        <div class="col-xs-12">
          <ul class="pager">
            <li{% if page == 1 %} class="disabled"{% endif %}>
              <a{% if page > 1 %} href="{{ base_url() }}/admin/products?page={{ page - 1 }}"{% endif %}>Anterior</a>
            </li>
            <li{% if page >= amountPages %} class="disabled"{% endif %}>
              <a{% if page < amountPages %} href="{{ base_url() }}/admin/products?page={{ page + 1 }}"{% endif %}>Próximo</a>
            </li>
          </ul>
        </div>
      </div>



    </div>
  </div>
</div>

{% endblock %}
